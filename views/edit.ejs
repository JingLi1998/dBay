<% include partials/header %>

<div class="form container mt-4">
  <h1 class="text-center">Edit Dog</h1>
  <form class="form" action="/dogs/<%= dog._id %>?_method=PUT" method="post">
    <div class="form-group">
      <input type="text" class="form-control" name="dog[name]" value="<%= dog.name %>">
    </div>
    <div class="form-group">
      <select class="form-control" name="dog[gender]">
        <option value="" selected disabled hidden>Gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="dog[breed]" value="<%= dog.breed %>">
    </div>
    <div class="form-group">
      <input type="number" min="0" step="1" class="form-control" name="dog[age]" value="<%= dog.age %>">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="dog[amount]" value="<%= dog.amount %>">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="dog[image]" value="<%= dog.image %>">
    </div>
    <div class="form-group">
      <textarea name="dog[description]" class="form-control" rows="5"><%= dog.description %></textarea>
    </div>
    <div class="row">
      <div class="col-6">
        <a class = "btn btn-block btn-primary" href="/dogs">Go Back</a>
      </div>
      <div class="col-6">
        <div class="form-group">
          <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>

<% include partials/footer %>