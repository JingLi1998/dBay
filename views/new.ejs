<div class="form container mt-4">
  <h1 class="text-center">Add a new Drug</h1>
  <form class="form" action="/drugs" method="post">
    <div class="form-group">
      <select class="form-control" name="drug[drug]">
        <option value="Marijuana">Weed</option>
        <option value="Acid">Acid</option>
        <option value="MDMA">MDMA</option>
        <option value="Crystal Meth">Meth</option>
      </select>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="drug[name]" placeholder="Drug Name">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="drug[amount]" placeholder="Amount">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="drug[image]" placeholder="Image URL">
    </div>
    <div class="form-group">
      <textarea name="drug[description]" class="form-control" rows="5" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-block btn-primary">Submit</button>
    </div>
  </form>
</div>

