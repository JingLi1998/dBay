<% include ../partials/header %>

<div class="form container mt-4">
  <h1 class="text-center">Add a new Dog</h1>
  <form class="form" action="/dogs" method="post">
    <div class="form-group">
      <input type="text" class="form-control" name="dog[name]"
        placeholder="Name">
    </div>
    <div class="form-group">
      <select class="form-control" name="dog[gender]">
        <option value="" selected disabled hidden>Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="dog[breed]"
        placeholder="Breed">
    </div>
    <div class="form-group">
      <input type="number" min="0" step="1" class="form-control" name="dog[age]"
        placeholder="Age">
    </div>
    <div class="form-group">
      <input type="number" min="0" step="0.01" class="form-control"
        name="dog[amount]" placeholder="Cost">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="dog[image]"
        placeholder="Image URL">
    </div>
    <div class="form-group">
      <textarea name="dog[description]" class="form-control" rows="5"
        placeholder="Description"></textarea>
    </div>
    <div class="row">
      <div class="col-6">
        <a class="btn btn-block btn-primary" href="/dogs">Go Back</a>
      </div>
      <div class="col-6">
        <div class="form-group">
          <button type="submit"
            class="btn btn-block btn-primary">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>

<% include ../partials/footer %>